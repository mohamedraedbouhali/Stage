{% extends 'base.html.twig' %}
{% block title %}Change Password{% endblock %}
{% block stylesheets %}
<style>
    body { background: linear-gradient(135deg, #e0ecff 0%, #fffbe0 100%); }
    .change-password-card {
        background: #fff;
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(0, 180, 255, 0.12);
        padding: 48px 40px 32px 40px;
        max-width: 420px;
        width: 100%;
        margin: 60px auto 0 auto;
        border: 3px solid;
        border-image: linear-gradient(90deg, #00b4ff 0%, #ffe066 100%) 1;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .change-title {
        color: #00b4ff;
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 24px;
        text-align: center;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px rgba(0,180,255,0.08);
    }
    .change-form label {
        color: #bfa100;
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }
    .change-form input[type="password"] {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: 1.5px solid #e0ecff;
        margin-bottom: 22px;
        font-size: 1.1rem;
        background: #f8fbff;
        transition: border 0.2s;
    }
    .change-form input[type="password"]:focus {
        border: 1.5px solid #00b4ff;
        outline: none;
        background: #fffbe0;
    }
    .change-form button {
        background: linear-gradient(90deg, #ffe066 0%, #00b4ff 100%);
        color: #333;
        border: none;
        padding: 16px 38px;
        border-radius: 25px;
        cursor: pointer;
        font-weight: 700;
        font-size: 1.15rem;
        transition: all 0.3s, box-shadow 0.2s;
        box-shadow: 0 2px 8px rgba(0,180,255,0.08);
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .change-form button:hover {
        background: linear-gradient(90deg, #fffbe0 0%, #00b4ff 100%);
        color: #222;
        box-shadow: 0 4px 16px rgba(0,180,255,0.16);
        transform: translateY(-2px) scale(1.03);
    }
    .alert {
        margin-bottom: 18px;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1rem;
    }
    .alert-success { background: #e0ffe0; color: #00b400; border: 1px solid #b2ffb2; }
    .alert-error { background: #fff0e0; color: #d3a100; border: 1px solid #ffe066; }
</style>
{% endblock %}
{% block body %}
<div class="change-password-card">
    <div class="change-title">Change Password</div>
    <form method="post" class="change-form" autocomplete="off">
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" required>
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" required>
        <label for="confirmPassword">Confirm New Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>
        <div style="text-align:center;">
            <button type="submit">Update Password</button>
        </div>
    </form>
</div>
{% endblock %} 