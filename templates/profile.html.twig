{% extends 'base.html.twig' %}
{% block title %}My Profile{% endblock %}
{% block stylesheets %}
<style>
    body {
        background: linear-gradient(135deg, #e0ecff 0%, #fffbe0 100%);
        min-height: 100vh;
        position: relative;
    }
    body::before {
        content: '';
        position: fixed;
        top: 0; left: 0; right: 0; bottom: 0;
        z-index: 0;
        pointer-events: none;
        opacity: 0.13;
        background-image: repeating-linear-gradient(135deg, #009FE3 0 2px, transparent 2px 40px), repeating-linear-gradient(45deg, #F9B233 0 2px, transparent 2px 40px);
    }
    .profile-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(120deg, #e0ecff 0%, #fffbe0 100%);
        position: relative;
        z-index: 1;
    }
    .profile-card {
        background: rgba(255,255,255,0.82);
        border-radius: 36px;
        padding: 48px 38px 36px 38px;
        max-width: 430px;
        width: 100%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: none;
        border: none;
    }
    .profile-card::before {
        display: none !important;
        content: none !important;
    }
    .profile-title {
        font-size: 2.4rem;
        font-weight: 900;
        margin-bottom: 8px;
        text-align: center;
        background: linear-gradient(90deg, #009FE3 0%, #F9B233 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        letter-spacing: 1px;
        z-index: 1;
        position: relative;
    }
    .profile-subtitle {
        font-size: 1.08rem;
        color: #009FE3;
        font-weight: 500;
        margin-bottom: 22px;
        text-align: center;
        opacity: 0.85;
        z-index: 1;
        position: relative;
    }
    .profile-avatar {
        width: 104px;
        height: 104px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #009FE3;
        background: #e0ecff;
        margin-bottom: 22px;
        box-shadow: 0 2px 16px rgba(0,159,227,0.13);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.7rem;
        color: #BDBDBD;
        position: relative;
        transition: border 0.3s, box-shadow 0.3s, transform 0.2s;
        z-index: 1;
    }
    .profile-avatar::after {
        content: '';
        position: absolute;
        top: -10px; left: -10px; right: -10px; bottom: -10px;
        border-radius: 50%;
        background: linear-gradient(135deg, #009FE3 0%, #F9B233 100%);
        opacity: 0.18;
        z-index: 0;
        transition: opacity 0.3s, box-shadow 0.3s;
        box-shadow: 0 0 24px 0 #009FE333, 0 0 12px 0 #F9B23333;
    }
    .profile-avatar:hover {
        border: 5px solid #F9B233;
        box-shadow: 0 4px 32px 0 #009FE355, 0 2px 12px 0 #F9B23355;
        transform: scale(1.04) rotate(-2deg);
    }
    .profile-btns {
        display: flex;
        gap: 18px;
        margin-bottom: 22px;
        justify-content: center;
        width: 100%;
        z-index: 1;
    }
    .profile-btns button, .profile-btns form button {
        border-radius: 22px;
        padding: 10px 32px;
        font-size: 1.13rem;
        font-weight: 700;
        border: none;
        background: linear-gradient(90deg, #F9B233 0%, #009FE3 100%);
        color: #333;
        box-shadow: 0 1px 8px rgba(0,180,255,0.08);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.1s;
        outline: none;
        position: relative;
        z-index: 1;
    }
    .profile-btns button:hover, .profile-btns form button:hover {
        background: linear-gradient(90deg, #fffbe0 0%, #009FE3 100%);
        color: #222;
        box-shadow: 0 3px 16px rgba(0,180,255,0.15);
        transform: translateY(-2px) scale(1.06);
    }
    .profile-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 12px;
        z-index: 1;
    }
    .profile-form label {
        color: #009FE3;
        font-weight: 700;
        margin-bottom: 4px;
        display: block;
        font-size: 1.13rem;
        margin-left: 2px;
        letter-spacing: 0.5px;
    }
    .profile-form input[type="text"],
    .profile-form input[type="email"] {
        width: 100%;
        padding: 16px 18px;
        border-radius: 16px;
        border: 1.7px solid #e0ecff;
        margin-bottom: 18px;
        font-size: 1.18rem;
        background: rgba(248,251,255,0.97);
        transition: border 0.2s, box-shadow 0.2s, background 0.2s;
        box-shadow: 0 1px 8px rgba(0,180,255,0.04);
        font-weight: 500;
        color: #222;
    }
    .profile-form input[type="text"]:focus,
    .profile-form input[type="email"]:focus {
        border: 1.7px solid #009FE3;
        outline: none;
        background: #fffbe0;
        box-shadow: 0 2px 12px rgba(0,180,255,0.10);
    }
    .profile-save-btn {
        background: linear-gradient(90deg, #F9B233 0%, #009FE3 100%);
        color: #333;
        border: none;
        padding: 18px 0;
        border-radius: 22px;
        cursor: pointer;
        font-weight: 900;
        font-size: 1.22rem;
        transition: all 0.3s, box-shadow 0.2s, transform 0.13s;
        box-shadow: 0 4px 18px rgba(0,180,255,0.13);
        margin-top: 12px;
        margin-bottom: 12px;
        width: 100%;
        letter-spacing: 1.2px;
        position: relative;
        z-index: 1;
    }
    .profile-save-btn:hover {
        background: linear-gradient(90deg, #fffbe0 0%, #009FE3 100%);
        color: #222;
        box-shadow: 0 8px 32px rgba(0,180,255,0.18);
        transform: translateY(-4px) scale(1.04);
    }
    @media (max-width: 600px) {
        .profile-card {
            padding: 18px 4vw 18px 4vw;
            max-width: 99vw;
        }
        .profile-title {
            font-size: 1.5rem;
        }
        .profile-avatar {
            width: 70px;
            height: 70px;
            font-size: 1.5rem;
        }
    }
</style>
{% endblock %}
{% block body %}
<div class="profile-container">
    <div class="profile-card">
        <div class="profile-title">My Profile</div>
        <div class="profile-subtitle">Manage your personal information and profile image</div>
        <div style="text-align:center;margin-bottom:10px;">
            {% if user.profilePicture %}
                <img src="{{ asset('uploads/profile/' ~ user.profilePicture) }}" alt="Profile" class="profile-avatar" id="profileImage">
            {% else %}
                <span class="profile-avatar" id="profileImage"><i class="fas fa-user"></i></span>
            {% endif %}
        </div>
        <div class="profile-btns">
            <button type="button" onclick="document.getElementById('profilePicture').click();">Change Image</button>
            <form method="post" action="{{ path('profile') }}" style="display:inline; margin:0;">
                <input type="hidden" name="removePicture" value="1">
                <button type="submit">Remove Image</button>
            </form>
        </div>
        <form method="post" enctype="multipart/form-data" class="profile-form" id="profileForm" style="margin-top:10px;">
            <input type="file" id="profilePicture" name="profilePicture" style="display:none;" onchange="document.getElementById('profileForm').submit();">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{ user.name }}" class="profile-input" required>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" class="profile-input" required>
            <div class="form-actions" style="text-align:center;">
                <button type="submit" class="profile-save-btn">Save</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
